@model ETicaretData.Entities.Order

@{
    ViewData["Title"] = "Delete Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Order</h1>
<hr />

<h3>Are you sure you want to delete this order?</h3>

<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.OrderNumber)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.OrderNumber)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.OrderDate)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.OrderDate)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Total)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.Total)</dd>
</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <input type="submit" value="Delete" class="btn btn-danger" />
}

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
